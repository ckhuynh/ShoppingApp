<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageviewdienthoai"
                android:layout_margin="2dp"
                android:adjustViewBounds="true"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textviewdienthoai"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_margin="5dp"
                    android:textColor="#1850D8"
                    android:text="Ten San pham"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textviewgiadienthoai"
                    android:layout_margin="5dp"
                    android:textColor="#E01876"
                    android:textSize="20sp"
                    android:text="gia san pham"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textviewmotadienthoai"
                    android:layout_margin="5dp"
                    android:textColor="#918F8F"
                    android:textSize="13sp"
                    android:text="laskhduiwqhkjsahdkasdjasjkdhaskjd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>